# Server Configuration
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=info
NODE_ENV=development

# Security
API_KEY=change_this_to_a_secure_random_string

# CORS Configuration
# For Desktop Apps (Tauri/Electron), you can often leave this blank as tauri://localhost and file:// are allowed by default.
# To allow ALL origins (easiest for testing), set to: *
CORS_ALLOW_ORIGIN=*

# File Uploads
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE_MB=10

# AI Services (Fireworks AI with Minimax)
FIREWORKS_API_KEY=your_fireworks_api_key_here

# MCP Integrations (Optional)
SLACK_MCP_URL=http://localhost:3001/sse
SLACK_TOKEN=your_slack_token
ATLASSIAN_MCP_URL=http://localhost:3002/sse
ATLASSIAN_TOKEN=your_atlassian_token
